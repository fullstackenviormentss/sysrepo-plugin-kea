# This is an example configuration file for DHCPv6 server in Kea.
#
# It has the following features enabled:
# - command channel
# - one IPv6 subnet with one dynamic pool range.
# - configured to listen on eth1 interface
# - configured to use memfile database (the simplest one)
# - no options
# - basic logging

{ "Dhcp6":
  
  {
      "control-socket": {
          "socket-type": "unix",
          "socket-name": "/tmp/kea-control-channel"
      },

      "interfaces-config": {
          "interfaces": [ "eth1" ]
      },
      
      "lease-database": {
          "type": "memfile"
      },
      
      "preferred-lifetime": 3000,
      "valid-lifetime": 4000,
      "renew-timer": 1000,
      "rebind-timer": 2000,
      
      "subnet6": [ {
          "subnet": "2001:db8::/32",
          
          "pools": [ { "pool": "2001:db8:bad:c0de::/64" } ],
          
          "interface": "eth1"
      } ]
  }
},

"Logging": {
    "loggers": [
        {
            "name": "kea-dhcp6",
            "output_options": [
                {
                    "output": "stdout"
                }
            ],
            "debuglevel": 0,
            "severity": "DEBUG"
        }
    ]
}

}
